% Simplified presentation style based on Pascal's principles
% Focus on clean typography, minimalism, and readability

% Select theme and color
\usetheme{Boadilla}
\usecolortheme{seagull}

% Remove navigation symbols
\setbeamertemplate{navigation symbols}{}

% Set font theme
\usefonttheme{professionalfonts}

% Define consistent colors
\definecolor{DarkGray}{RGB}{70, 70, 70}
\definecolor{MediumGray}{RGB}{120, 120, 120}
\definecolor{LightGray}{RGB}{240, 240, 240}
\definecolor{Accent}{RGB}{0, 83, 155}

% Set title and frame title colors
\setbeamercolor{title}{fg=DarkGray}
\setbeamercolor{frametitle}{fg=DarkGray}
\setbeamercolor{normal text}{fg=DarkGray}

% Set block colors
\setbeamercolor{block title}{fg=DarkGray,bg=LightGray}
\setbeamercolor{block body}{fg=DarkGray,bg=LightGray}

% Simplify item bullets and set their colors
\setbeamertemplate{itemize item}{\textbullet}
\setbeamertemplate{itemize subitem}{\textendash}
\setbeamercolor{itemize item}{fg=MediumGray}
\setbeamercolor{itemize subitem}{fg=MediumGray}

% Set margins
\setbeamersize{text margin left=10mm, text margin right=10mm}

% Define simple alert commands
\newcommand{\highlight}[1]{\textcolor{Accent}{#1}}
\newcommand{\positive}[1]{\textcolor{green!60!black}{#1}}
\newcommand{\negative}[1]{\textcolor{red!60!black}{#1}}

% Set blocks to rounded with no shadows
\setbeamertemplate{blocks}[rounded][shadow=false]

% Custom section page
\newcommand{\sectionpage}[1]{
  \begin{frame}
  \vspace{2em}
  \begin{center}
  {\LARGE\color{DarkGray}#1}
  \end{center}
  \end{frame}
}

% Footer with slide numbers
\setbeamertemplate{footline}{
  \begin{beamercolorbox}[wd=\paperwidth,ht=2.5ex,dp=1.125ex,leftskip=.3cm,rightskip=.3cm]{structure}
    \hfill\usebeamerfont{page number in head/foot}
    \insertframenumber\,/\,\inserttotalframenumber
  \end{beamercolorbox}
}